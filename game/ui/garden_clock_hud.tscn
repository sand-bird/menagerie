resource/name = "date_info"
script/source = "extends TextureFrame

onready var week_day = get_node(\"week_day\")
onready var date = get_node(\"date\")
onready var month_inset = get_node(\"month_inset\")

func _ready():
	Time.connect(\"day_changed\", self, \"update_day\")
	Time.connect(\"month_changed\", self, \"update_month\")
	update_day(Time.day)
	update_month(Time.month)

func update_day(day):
	week_day.set_text(Time.get_day().substr(0, 3).to_upper())
	date.set_text(Utils.ordinalize(day + 1))

func update_month(month):
	month_inset.get_node(\"sprite\").set_frame(month)"

[sub_resource type="GDScript" id=2]

resource/name = "clock"
script/source = "extends TextureFrame

onready var hand = get_node(\"hand\")
onready var pendulum = get_node(\"pendulum\")

func _ready():
	Time.connect(\"hour_changed\", self, \"move_hand\")
	Time.connect(\"tick_changed\", self, \"move_pendulum\")
	move_hand(Time.hour)
	move_pendulum(Time.tick)

func move_hand(hour):
	hand.set_frame(hour % 12)

func move_pendulum(tick):
	pendulum.set_frame((tick + 1) % 4)"

