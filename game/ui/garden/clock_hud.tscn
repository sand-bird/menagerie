resource_name = "clock"
script/source = "extends TextureRect

func _ready():
	Dispatcher.connect(\"hour_changed\", self, \"move_hand\")
	Dispatcher.connect(\"tick_changed\", self, \"move_pendulum\")
	move_hand(Time.hour)
	move_pendulum(Time.tick)

func move_hand(hour):
	$hand.set_frame(hour % 12)

func move_pendulum(tick):
	$pendulum.set_frame((tick + 1) % 4)"
