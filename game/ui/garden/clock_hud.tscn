resource_name = "date_info"
script/source = "extends TextureRect

func _ready():
	Dispatcher.connect(\"date_changed\", Callable(self, \"update_date\"))
	Dispatcher.connect(\"month_changed\", Callable(self, \"update_month\"))
	update_date()
	update_month()

func update_date():
	$week_day.set_text(Clock.get_printable_day_abbr())
	$date.set_text(Clock.get_printable_date())

func update_month():
	$month_inset.get_node(\"sprite\").set_frame(Clock.month)
"

[sub_resource type="GDScript" id=2]
resource_name = "clock"
script/source = "extends TextureRect

func _ready():
	Dispatcher.connect(\"hour_changed\", Callable(self, \"move_hand\"))
	Dispatcher.connect(\"tick_changed\", Callable(self, \"move_pendulum\"))
	move_hand()
	move_pendulum()

func move_hand():
	$hand.set_frame(Clock.hour % 12)

func move_pendulum():
#	var frame = (Clock.tick / 2) + ((Clock.hour % 2) * 2)
#	$pendulum.set_frame((frame + 1) % 4)
	$pendulum.set_frame(Clock.tick % 4)
"

